<%- include('../partials/header.ejs') %>


  <div class="d-flex justify-content-start p-3">
    <a class="btn btn-secondary my-2 my-sm-0" role="button" href="/codes/new">Generate New QR Code</a>
  </div>
  <div class="container-fluid">
    <div class="row no-gutters">
      <% codes.forEach(code => { %>
          <div class="col-md-3">
            <div class="card border-primary mb-3 bg-secondary" style="max-width: 20rem;">
              <div class="card-header d-flex justify-content-center"><%= code.title %> </div>
              <div class="card-body">
                <div class="d-flex justify-content-center p-3">
                  <img src="<%= code.codeUrl %>" alt="qr code" srcset="">
                </div>
                <div class="d-flex justify-content-center">
                  <div class="p-2">
                    <a class="btn btn-success btn-md" href="/codes/edit/<%= code._id %>">Edit</a>
                  </div>
                  <div class="p-2">
                    <form action="/codes/<%= code._id %>?_method=DELETE" method="POST">
                      <input class="btn btn-danger btn-md" type="submit" value="Delete">
                    </form>
                  </div>
                </div>
                <div class="d-flex justify-content-center">
                  <p1>Created: <%= (code.createdAt).toDateString() %> </p1>
                </div>
            </div>
            </div>
         </div>
      <% }) %>
    </div>
  </div>  
  <%- include('../partials/footer.ejs') %>

  


 
 