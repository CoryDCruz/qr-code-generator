<%- include('../partials/header.ejs') %>
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-6 col-md-3">
            <form action="/codes/edit/<%= code._id %>?_method=PUT" method="POST">
            <div class="form-group mx-auto">
                <label for="inputTitle" class="form-label mt-4">Title</label>
                <input type="text" class="form-control" value="<%= code.title %>" name="title">
            </div>
            <div class="form-group mx-auto">
                <label for="inputDescription" class="form-label mt-4">Description</label>
                <input type="text" class="form-control" value="<%= code.description %>" name="description"/>
            </div>
            <div class="d-grid gap-2">
                <input class="btn btn-large btn-primary" type="submit" value="Edit">
            </div>
        </div>
        </form> 
        </div>
    </div>
</div>