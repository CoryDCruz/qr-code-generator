<%- include('../partials/header.ejs') %>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-6 col-md-3">
            <form action="/codes/new" method="post">
            <div class="form-group mx-auto">
                <label for="inputTitle" class="form-label mt-4">Title</label>
                <input type="text" class="form-control" name="title" placeholder="Enter title">
            </div>
            <div class="form-group mx-auto">
                <label for="inputDescription" class="form-label mt-4">Description</label>
                <input type="text" class="form-control" name="description" placeholder="Enter description">
            </div>
            <div class="form-group mx-auto">
                <label for="inputUrl" class="form-label mt-4">URL</label>
                <input type="url" class="form-control" id="exampleInputPassword1" placeholder="Url" name="codeUrl">
            </div>
            <div class="d-grid gap-2">
                <input class="btn btn-large btn-primary" type="submit" value="Generate">
            </div>
        </div>
        </form> 
        </div>
    </div>
</div>