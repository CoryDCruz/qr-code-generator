<%- include('../partials/header.ejs') %>
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-6 col-md-3">
            <form action="/users/edit/<%= user._id %>?_method=PUT" method="POST">
            <div class="form-group mx-auto">
                <label for="inputName" class="form-label mt-4">Name</label>
                <input type="text" class="form-control" value="<%= user.name %>" name="name">
            </div>
            <div class="form-group mx-auto">
                <label for="inputEmail" class="form-label mt-4">Email</label>
                <input type="email" class="form-control" value="<%= user.email %>" name="email"/>
            </div>
            <div class="d-grid gap-2">
                <input class="btn btn-large btn-primary" type="submit" value="Edit">
            </div>
        </div>
        </form> 
        </div>
    </div>
</div>